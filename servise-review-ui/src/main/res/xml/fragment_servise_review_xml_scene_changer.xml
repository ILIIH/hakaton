<?xml version="1.0" encoding="utf-8"?>
<MotionScene 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        motion:constraintSetEnd="@+id/end"
        motion:constraintSetStart="@id/start"
        motion:duration="200">
       <OnSwipe
        motion:dragDirection="dragUp"
           motion:dragScale="1"
           motion:moveWhenScrollAtTop="true"
           motion:onTouchUp="stop"
           motion:touchAnchorId="@id/title_description"
           motion:touchAnchorSide="top"
           />
    </Transition>

    <ConstraintSet android:id="@+id/start">
        <Constraint
            android:id="@+id/checkBox3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            motion:layout_constraintTop_toBottomOf="@+id/checkBox2"
            motion:layout_constraintStart_toStartOf="@+id/available_time_title"
            android:layout_marginTop="8dp"
             />
        <Constraint
            android:id="@+id/checkBox3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            motion:layout_constraintTop_toBottomOf="@+id/checkBox2"
            motion:layout_constraintStart_toStartOf="@+id/available_time_title"
            android:layout_marginTop="8dp"
             />
        <Constraint
            android:id="@+id/checkBox2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            motion:layout_constraintTop_toBottomOf="@+id/checkBox1"
            motion:layout_constraintStart_toStartOf="@+id/checkBox1"
            android:layout_marginTop="8dp"
             />
        <Constraint
            android:id="@+id/checkBox2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            motion:layout_constraintTop_toBottomOf="@+id/checkBox1"
            motion:layout_constraintStart_toStartOf="@+id/checkBox1"
            android:layout_marginTop="8dp"
            />
    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">
        <Constraint
            android:id="@+id/checkBox3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            motion:layout_constraintTop_toBottomOf="@+id/checkBox2"
            motion:layout_constraintStart_toStartOf="@+id/available_time_title"
            android:layout_marginTop="8dp"
            android:visibility="gone" />
        <Constraint
            android:id="@+id/checkBox2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            motion:layout_constraintTop_toBottomOf="@+id/checkBox1"
            motion:layout_constraintStart_toStartOf="@+id/checkBox1"
            android:layout_marginTop="8dp"
            android:visibility="gone" />
        <Constraint
            android:id="@+id/checkBox1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            motion:layout_constraintTop_toBottomOf="@+id/available_time_title"
            motion:layout_constraintStart_toStartOf="@+id/available_time_title"
            android:layout_marginTop="12dp"
            android:visibility="gone" />
        <Constraint
            android:id="@+id/available_time_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            motion:layout_constraintTop_toBottomOf="@+id/surname"
            motion:layout_constraintStart_toStartOf="@+id/surname"
            android:layout_marginTop="25dp"
            android:visibility="gone" />
        <Constraint
            android:id="@+id/surname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            motion:layout_constraintTop_toBottomOf="@+id/name"
            motion:layout_constraintStart_toStartOf="@+id/name"
            android:layout_marginTop="10dp"
            android:visibility="gone" />
        <Constraint
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            motion:layout_constraintTop_toBottomOf="@+id/backButton"
            motion:layout_constraintStart_toStartOf="@+id/backButton"
            android:layout_marginTop="36dp"
            android:visibility="gone" />
        <Constraint
            android:layout_height="150dp"
            android:layout_width="150dp"
            android:id="@+id/profileImage"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            android:layout_marginBottom="550dp"
            android:layout_marginEnd="4dp"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintBottom_toBottomOf="parent" />

        <Constraint
            android:id="@+id/title_description"
            android:elevation="3dp"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="150dp"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintHorizontal_bias="0.0" />


    </ConstraintSet>
</MotionScene>