<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/auth_nav"
    app:startDestination="@id/greetingsFragment">

    <fragment
        android:id="@+id/greetingsFragment"
        android:name="com.example.auth_ui.GreetingsFragment"
        android:label="GreetingsFragment" >
        <action
            android:id="@+id/action_greetingsFragment_to_loginFragment"
            app:destination="@id/loginFragment" />
        <action
            android:id="@+id/action_greetingsFragment_to_signUpFragment"
            app:destination="@id/signUpFragment" />
    </fragment>
    <fragment
        android:id="@+id/loginFragment"
        android:name="com.example.auth_ui.LoginFragment"
        android:label="LoginFragment" />
    <fragment
        android:id="@+id/signUpFragment"
        android:name="com.example.auth_ui.SignUpFragment"
        android:label="SignUpFragment" />
</navigation>